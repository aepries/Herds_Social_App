<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaronpries.herds_social_app.EventsExpandedFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titlePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagePost"
            android:textSize="30dp"
            android:text="TITLE GOES HERE"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/infoPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlePost"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="BIO BIO BIO BIO BIO BIO BIO BIO"
            />

        <ImageView
            android:id="@+id/imagePost"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/orange"
            android:fitsSystemWindows="false"
            android:scaleType="fitXY" />


    </RelativeLayout>

</FrameLayout>
