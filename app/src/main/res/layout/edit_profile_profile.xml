<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaronpries.herds_social_app.EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/xname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="43dp"
            android:hint="Name"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/xage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/xname"
            android:layout_below="@+id/xname"
            android:layout_marginTop="25dp"
            android:hint="Age"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/xgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/xage"
            android:layout_below="@+id/xage"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="18dp"
            android:hint="Group"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/xbio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ximage"
            android:layout_alignStart="@+id/xgroup"
            android:layout_below="@+id/ximage"
            android:layout_marginTop="22dp"
            android:hint="About You"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/ximage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:textSize="25dp"
            android:layout_below="@+id/xgroup"
            android:layout_alignStart="@+id/xgroup"
            android:layout_marginTop="12dp"
            android:layout_alignEnd="@+id/xgroup"
            android:maxLines="1"
            />

        <Button
            android:id="@+id/xsubmitProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textColor="#FFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>
