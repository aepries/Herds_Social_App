            <!--android:textSize="12sp"-->
            <!--android:textColor="#000000"-->
            <!--android:layout_below="@id/name"-->
            <!--android:layout_toEndOf="@id/image"-->
            <!--/>-->


    </RelativeLayout>

</android.support.v7.widget.CardView>